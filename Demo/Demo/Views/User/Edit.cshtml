@model Demo.Models.userInfo

@{
    ViewBag.Title = "修改用户信息";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    function back() {
        window.location.href = "/User/ShowUserInfo";
    }
</script>

@using(Html.BeginForm()){
    @Html.ValidationSummary(true)
    <table class="table-hover" style="width: 400px;margin:0 auto">
        <caption><h2>用户信息</h2></caption>
        @Html.HiddenFor(model => model.id)
        <tr>
            <td>
                用户名：
            </td>
            <td><input type="text" class="form-control" id="name" name="name"
                        placeholder="请输入用户名" value="@Html.DisplayFor(model => model.name)"/>
            </td>
        </tr>
        <tr>
            <td>
                密码：
            </td>
            <td><input type="text" class="form-control" id="pwd" name="pwd"
                       placeholder="请输入密码" value="@Html.DisplayFor(model => model.pwd)"/>
            </td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" value="保存" class="btn btn-info btn-lg btn-block"/></td>
        </tr>
    </table>
}
<p>
    <button class="btn btn-default btn-lg btn-block" onclick="back()" style="width: 400px;margin:0 auto">返回</button> 
</p>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
