@model Demo.Models.userInfo

@{
    ViewBag.Title = "Details";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script type="text/javascript">
    function back() {
        window.location.href = "/User/ShowUserInfo";
    }
</script>
<table class="table table-hover" style="margin: 0 auto;width: 400px">
    <caption><h2>用户详情</h2></caption>
    <tr>
        <td>用户名</td>
        <td>密码</td>
        <td>操作</td>
    </tr>
    <tr>
        <td>@Html.DisplayFor(model => model.name)</td>
        <td>@Html.DisplayFor(model => model.pwd)</td>
        <td>@Html.ActionLink("编辑", "Edit", new { id=Model.id })</td>
    </tr>
    <tr>
        <td colspan="3">
            <button class="btn btn-default btn-lg btn-block" onclick="back()">返回</button>
        </td>
    </tr>
</table>
